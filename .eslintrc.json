{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "google"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "require-jsdoc": "off",
    "object-curly-spacing": ["error", "always"],
    "quotes": ["error", "double"],
    "semi": ["warn", "always"],
    "no-unused-vars": "warn",
    "max-len": "off",
    "operator-linebreak": ["error", "before"],
    "react/prop-types": "off",
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off",
    "linebreak-style": 0,
    "indent": ["error", 2]
  }
}
